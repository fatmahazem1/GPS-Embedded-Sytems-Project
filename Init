init();
	
	while(1)
	{
		if( (GPIO_PORTF_DATA_R & 0x11) == 0x10) // sw2 pin0
		{
			GPIO_PORTF_DATA_R |= RED;  
		}
		else if( (GPIO_PORTF_DATA_R & 0x11) == 0x01) // sw1 pin4
		{
			GPIO_PORTF_DATA_R |= BLUE;  
		}	
		else if( (GPIO_PORTF_DATA_R & 0x11) == 0x00) // 2 sw
		{
			GPIO_PORTF_DATA_R |= Green;  
		}	
		else
		{
			GPIO_PORTF_DATA_R = 0;  
		}	

